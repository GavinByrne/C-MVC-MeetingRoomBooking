<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>



<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <div class="Icon">
                <h4>IT COMPANY IRELAND</h4>
                <a href="@Url.Action("DailyBookings","Booking")">Meeting Room Booking System</a>
            </div>

            @*@Html.ActionLink("Meeting Room Booking System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
        </div>
        <div class="navbar-collapse collapse" style="float:right; padding-right:5px;">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Help", "About", "Home")</li>
                <li>@Html.ActionLink("Rooms", "Index", "Rooms")</li>
            </ul>
            <p class="nav navbar-text navbar-right">Hello, @User.Identity.Name!</p>
        </div>
    </div>
</div>
<div class="container body-content">
    @RenderBody()
    <br />
    <footer>
        @*<div class="dayLinks">
                @Helpers.view_day(DateTime.Now)
                <br />
                @Helpers.view_week(DateTime.Now)
                <br />
                @Helpers.view_month(DateTime.Now)
            </div>*@
    </footer>
</div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    @if (string.IsNullOrEmpty((string)TempData["ErrorList"]) == false)
    {
        <script type="text/javascript">
            $(function () {
                alert('@HttpUtility.JavaScriptStringEncode((string) TempData["ErrorList"])')
            });
        </script>
    }
</body>

</html>
